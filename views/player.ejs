<%- include ./template/header.ejs %>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Player's</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">Player Form</div>
                <form style="padding:10px;" method="post" action="/players">
                    <div class="form-group">
                        <label>Player Name</label>
                        <input type="text" class="form-control" name="name">
                        
                    </div>
                    <div class="form-group">
                        <label>Player Level</label>
                        <input type="number" name="level" class="form-control">
                    </div>
                    <div class="form-group">
                            <label>Job</label>
                            <input type="text" name="job" class="form-control">
                        </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Add Player</button>
                    </div>
                    <!-- <div class="alert alert-danger">
                        Player Name <strong>sudah terpakai!</strong>
                    </div> -->
                    <div class="alert alert-danger">
                        Player Name <strong>Alphabet only!</strong>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Player List
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Level</th>
                                    <th>Job</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% players.forEach((dataPlayer)=>{ %>
                              <tr>
                                  <td><%= dataPlayer.id %></td>
                                  <td><%= dataPlayer.name %></td>
                                  <td><%= dataPlayer.level %> (Elite)</td>
                                  <td><%= dataPlayer.job %></td>
                                  <td>
                                    <a href="/edit">
                                        <button class="btn btn-warning">Edit</button>
                                    </a>
                                    <a href="players/delete/<%= dataPlayer.id %>" class="btn btn-danger">Delete</a>
                                  </td>
                              </tr>
                              <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
</div>

  
<%- include ./template/footer.ejs %>