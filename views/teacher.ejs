<%- include ./template/head.ejs %>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Teachers</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">Contacts Form</div>
                <form style="padding:10px;" role="form" method="post" action="/contacts">
                    <div class="form-group">
                        <label>Name</label>
                        <input class="form-control" name="name">
                        
                    </div>
                    <div class="form-group">
                        <label>Company</label>
                        <input name="company" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Telephone</label>
                        <input name="telephone" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input name="email" class="form-control">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit Button</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Contact List
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Company</th>
                                    <th>Telephone</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for(let i = 0; i< ct.length; i++){ %>
                                <tr>
                                    <td><%= ct[i].id %></td>
                                    <td><%= ct[i].name %></td>
                                    <td><%= ct[i].company %></td>
                                    <td><%= ct[i].telp_number %></td>
                                    <td><%= ct[i].email %></td>
                                    <td style="width: 145px; display: block;">
                                        <a href="/contacts_edit/<%= ct[i].id %>">
                                            <button class="btn btn-warning">Edit</button>
                                        </a>
                                        <a href="/contacts_delete/<%= ct[i].id %>"><button class="btn btn-danger">Del</button></a>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
</div>

  
<%- include ./template/footer.ejs %>