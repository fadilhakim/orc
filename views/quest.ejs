<%- include ./template/header.ejs %>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quest's</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">Quest Form</div>
                <form style="padding:10px;" method="post" action="/quests">
                    <div class="form-group">
                        <label>Quest Name</label>
                        <input class="form-control" name="quest">
                    </div>
                    <div class="form-group">
                        <label>Quest Level </label>
                        <input name="level" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Quest Detail</label>
                        <textarea name="detail" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Add Quest</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Quest List
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Q.ID</th>
                                    <th>Q.Name</th>
                                    <th>Q.Level</th>
                                    <th>Quest Detail</th>
                                    <th>Invited Players</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            <% quests.forEach((dataQuest)=>{ %>
                              <tr>
                                  <td><%= dataQuest.id %></td>
                                  <td><strong style="font-style:italic;"><%= dataQuest.quest %></strong> </td>
                                  <td><%= dataQuest.level %></td>
                                  <td><%= dataQuest.detail %>
                                  </td>
                                  <td>
                                      <!-- 1. Aragorn <br>
                                      2. Elrond <br>
                                      3. Nazgul -->
                                      <i style="color:#ccc">No Players Invited</i>
                                  </td>
                                  <td> 
                                    <a href="">
                                                <button class="btn btn-primary">Invite Player</button>
                                    </a>
                                    <a href="">
                                        <button class="btn btn-warning">Edit</button>
                                    </a>
                                    <a href="">
                                        <button class="btn btn-danger">Delete</button></a>
                                   </td>
                              </tr>
                              <% }) %>
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
    </div>
</div>

  
<%- include ./template/footer.ejs %>