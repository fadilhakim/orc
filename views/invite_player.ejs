<%- include ./template/header.ejs %>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Quest : <%= quests[0].quest %>/h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">Quest Form</div>
                <form style="padding:10px;" role="form" method="post" action="/contacts">
                    <div class="form-group">
                        <label>Select Player</label>
                        <select name="" id="" class="form-control">
                            <% players.forEach((dataPlayers)=>{%>
                                <option value="<%= dataPlayers.name %>"><%= dataPlayers.name %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Invite Player</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

  
<%- include ./template/footer.ejs %>